<link rel="stylesheet" href="/css/header.css">
<header id="layout-header">
    <nav id="navbar">
        <div class="mini-logo">
            <p>
                <a href="/"><img src="/images/QuikLink_Logo_Final.png" id="logo"> </a>
            </p>
        </div>
        <div id="auth-links">
            <ul id="nav-links">
                <% if (locals.user){ %>
                    <li id="nav-link-1">
                        <a id="username-header" href="/users/profile"><%= user.name %></a>
                    </li>
                    
                    <li id="nav-link-2">
                        <a href="/users/sign-out">Sign Out</a>
                    </li>
                <%} else{ %>
                    <li id="nav-link-1">
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                    <li id="nav-link-2">
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>